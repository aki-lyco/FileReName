<UserControl x:Class="Explore.RenameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="600"
             AllowDrop="True"
             DragOver="OnDragOver"
             Drop="OnDrop">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="6"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="6"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- 見出し -->
		<TextBlock x:Name="TxtHeader" Grid.Row="0"
                   Text="AI リネーム" FontSize="18" FontWeight="Bold"
                   Margin="12,10,12,0"/>

		<Rectangle Grid.Row="1" Height="1" Fill="#33000000" Margin="8,0,8,0"/>

		<!-- 操作ボタン -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="12,6,12,0">
			<Button x:Name="BtnAdd"       Click="OnAddFiles"  Margin="0,0,8,0" Content="ファイル追加…"/>
			<Button x:Name="BtnSuggest"   Click="OnSuggest"   Margin="0,0,8,0" Content="候補作成"/>
			<Button x:Name="BtnSelectAll" Click="OnSelectAll" Margin="0,0,8,0" Content="すべて選択"/>
			<Button x:Name="BtnApply"     Click="OnApply"     Margin="0,0,8,0" Content="選択を適用"/>
			<!-- ★ 追加：クリア -->
			<Button x:Name="BtnClear"     Click="OnClear"     Margin="0,0,8,0" Content="クリア"/>
			<Button x:Name="BtnCheckAI"   Click="OnCheckAI"   Margin="8,0,0,0" Content="AI状態確認"/>
		</StackPanel>

		<Rectangle Grid.Row="3" Height="1" Fill="#33000000" Margin="8,0,8,0"/>

		<!-- 一覧 -->
		<DataGrid Grid.Row="4"
                  ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  Margin="8"
                  x:Name="Grid">
			<DataGrid.Columns>
				<DataGridCheckBoxColumn x:Name="ColApply"
                                        Binding="{Binding Apply, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="60" />
				<DataGridTextColumn x:Name="ColOriginal"
                                    Binding="{Binding OriginalName}"
                                    Width="2*"/>
				<DataGridTextColumn x:Name="ColSuggested"
                                    Binding="{Binding SuggestedName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="2*"/>
				<DataGridTextColumn x:Name="ColPreview"
                                    Binding="{Binding PreviewFullPath}"
                                    Width="3*"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- ヒント + ステータス -->
		<DockPanel Grid.Row="5" Margin="8,0,8,8">
			<TextBlock x:Name="TxtHint" DockPanel.Dock="Left"
                       Text="ここにファイルをドロップするか「ファイル追加…」をクリックしてください。"
                       Foreground="#666" />
			<TextBlock Text="{Binding StatusText}" DockPanel.Dock="Right"
                       HorizontalAlignment="Right" />
		</DockPanel>
	</Grid>
</UserControl>
