<UserControl x:Class="Explore.FilesSystem.DockWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Explore.FilesSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="#FF828790">
        <DockPanel>
            <Border Background="{DynamicResource ThemeBrush}" DockPanel.Dock="Top" Padding="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Foreground="White"
                               VerticalAlignment="Center">
                        <Run FontFamily="Segoe Fluent Icons" Text="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                             FontSize="14" BaselineAlignment="Center"/>
                        <Run Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </TextBlock>
                    <Button Grid.Column="1" Style="{StaticResource CaptionControlButton}"
                            Content="&#xE718;" FontSize="12">
                    </Button>
                    <Button Grid.Column="3" Style="{StaticResource CaptionControlButton}"
                            Content="&#xE8A7;" FontSize="12">
                    </Button>
                    <Button Grid.Column="5" Style="{StaticResource CaptionControlButton}"
                            Content="&#xEF2C;" FontSize="8">
                    </Button>
                </Grid>
            </Border>

            <ContentControl x:Name="ToolbarHost" DockPanel.Dock="Top"
                            Content="{Binding Toolbar, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <ContentPresenter />
        </DockPanel>
    </Border>
</UserControl>
