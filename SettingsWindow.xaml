<Window x:Class="Explore.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="設定" Height="220" Width="380"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Padding="16">
        <StackPanel>
            <GroupBox Header="インデックス">
                <StackPanel Margin="8">
                    <CheckBox x:Name="AutoIndexBox" Content="フォルダ選択時に自動インデックス"/>
                    <CheckBox x:Name="IncludeSubsBox" Content="サブフォルダを含める（インデックス時）" Margin="0,8,0,0"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Width="90" Margin="0,0,8,0" Click="OnCancel">キャンセル</Button>
                <Button Width="90" IsDefault="True" Click="OnOK">OK</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
