<UserControl x:Class="Explore.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Explore"
             mc:Ignorable="d"
             d:DesignWidth="900" d:DesignHeight="600">

	<!-- ========= Resources ========= -->
	<UserControl.Resources>
		<!-- 役割で左右に振り分け -->
		<local:RoleToVisibilityConverter x:Key="RoleToVisibility"/>

		<!-- 吹き出し（ユーザー） -->
		<Style x:Key="UserBubble" TargetType="Border">
			<Setter Property="Background" Value="#E6F4FF"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
			<Setter Property="Margin" Value="0,4,0,4"/>
			<Setter Property="MaxWidth" Value="720"/>
		</Style>

		<!-- 吹き出し（AI） -->
		<Style x:Key="AIBubble" TargetType="Border">
			<Setter Property="Background" Value="#FFFFFF"/>
			<Setter Property="Padding" Value="8"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="Margin" Value="0,4,0,4"/>
			<Setter Property="BorderBrush" Value="#E5E7EB"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Effect">
				<Setter.Value>
					<DropShadowEffect BlurRadius="6" ShadowDepth="1" Opacity="0.035"/>
				</Setter.Value>
			</Setter>
			<Setter Property="MaxWidth" Value="720"/>
		</Style>

		<!-- ChatMessage 表示（通常メッセージ） -->
		<DataTemplate DataType="{x:Type local:ChatMessage}">
			<Grid>
				<Border Style="{StaticResource UserBubble}"
						Visibility="{Binding Role, Converter={StaticResource RoleToVisibility}, ConverterParameter=user}">
					<TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="14"/>
				</Border>
				<Border Style="{StaticResource AIBubble}"
						Visibility="{Binding Role, Converter={StaticResource RoleToVisibility}, ConverterParameter=assistant}">
					<TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="14"/>
				</Border>
			</Grid>
		</DataTemplate>

		<!-- ====== 検索結果カード（SearchTemplate） ====== -->
		<DataTemplate x:Key="SearchCards" DataType="{x:Type local:ChatMessage}">
			<StackPanel Margin="6" HorizontalAlignment="Left" Width="720">
				<TextBlock Text="検索結果" FontWeight="SemiBold" Margin="2,0,0,4"/>
				<ItemsControl ItemsSource="{Binding Results}">
					<ItemsControl.ItemTemplate>
						<DataTemplate DataType="{x:Type local:SearchResultItem}">
							<Border BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8"
									Padding="8" Margin="0,4,0,4" Background="White">
								<StackPanel>
									<DockPanel Margin="0,0,0,2">
										<TextBlock Text="{Binding Index, StringFormat={}{0}. }" Foreground="#64748B" Margin="0,0,2,0"/>
										<TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
										<TextBlock Text="{Binding SizeText, StringFormat=  ({0})}" Foreground="#64748B" Margin="6,0,0,0"/>
									</DockPanel>
									<TextBlock Text="{Binding Parent}" Foreground="#6B7280" Margin="0,0,0,6"/>
									<TextBlock>
										<Hyperlink Click="ResultOpen_Click" Tag="{Binding Path}">
											場所を開く
										</Hyperlink>
										<Run Text="  "/>
										<Run Text="{Binding MtimeText}" Foreground="#6B7280"/>
									</TextBlock>
								</StackPanel>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</StackPanel>
		</DataTemplate>

		<!-- DataTemplateSelector（検索結果だけ上のテンプレートに差し替える） -->
		<local:ChatTemplateSelector x:Key="ChatTmpl"
									SearchTemplate="{StaticResource SearchCards}" />

		<!-- 右上トグル（見た目だけ共通化） -->
		<Style x:Key="ToolbarToggle" TargetType="ToggleButton">
			<Setter Property="FontFamily" Value="Segoe UI"/>
			<Setter Property="FontSize" Value="13"/>
			<Setter Property="Foreground" Value="{StaticResource TB.Text}"/>
			<Setter Property="Height" Value="30"/>
			<Setter Property="MinWidth" Value="92"/>
			<Setter Property="Padding" Value="12,4"/>
			<Setter Property="Margin" Value="6,0,0,0"/>
			<Setter Property="Background" Value="{StaticResource TB.Fill}"/>
			<Setter Property="BorderBrush" Value="{StaticResource TB.Border}"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ToggleButton">
						<Border x:Name="Bd"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="10">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Fill.Hover}"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Fill.Press}"/>
							</Trigger>
							<Trigger Property="IsChecked" Value="True">
								<Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Primary.Fill}"/>
								<Setter Property="BorderBrush" Value="{StaticResource TB.Primary.Border}"/>
								<Setter Property="Foreground" Value="{StaticResource TB.Primary.Text}"/>
								<Setter Property="FontWeight" Value="SemiBold"/>
							</Trigger>
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Opacity" Value="0.55"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- 入力ボックス用の色（コンパクト） -->
		<SolidColorBrush x:Key="Chat.Input.Bg"     Color="#FFFFFFFF"/>
		<SolidColorBrush x:Key="Chat.Input.Border" Color="#E5E7EB"/>

		<!-- 丸ボタン（左の＋・右の↑） -->
		<Style x:Key="CircleButton" TargetType="Button">
			<Setter Property="Width" Value="32"/>
			<Setter Property="Height" Value="32"/>
			<Setter Property="Padding" Value="0"/>
			<Setter Property="Background" Value="#F3F4F6"/>
			<Setter Property="BorderBrush" Value="#D1D5DB"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Foreground" Value="#111827"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="B" CornerRadius="16"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="B" Property="Background" Value="#EEEFF2"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter TargetName="B" Property="Background" Value="#E6E7EB"/>
							</Trigger>
							<Trigger Property="IsEnabled" Value="False">
								<Setter TargetName="B" Property="Opacity" Value="0.5"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style x:Key="CircleButton.Primary" TargetType="Button" BasedOn="{StaticResource CircleButton}">
			<Setter Property="Background" Value="#E3EEFF"/>
			<Setter Property="BorderBrush" Value="#C7DBFF"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="#0F172A"/>
			<Setter Property="ToolTip" Value="送信 (Enter)"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="B" CornerRadius="16"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="B" Property="Background" Value="#DAE8FF"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter TargetName="B" Property="Background" Value="#D0E1FF"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<!-- ========= Layout ========= -->
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Toolbar -->
			<RowDefinition Height="*"/>
			<!-- Messages -->
			<RowDefinition Height="Auto"/>
			<!-- Input -->
		</Grid.RowDefinitions>

		<!-- ===== Toolbar ===== -->
		<Grid Grid.Row="0" Margin="8,6,8,2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
				<TextBlock Text="Chat" FontSize="15" FontWeight="SemiBold" Foreground="#444" Margin="4,0,0,0"/>
			</StackPanel>

			<WrapPanel Grid.Column="1" VerticalAlignment="Center">
				<ToggleButton Content="チャット" IsChecked="True" Style="{StaticResource ToolbarToggle}"/>
				<ToggleButton Content="デバッグ" Style="{StaticResource ToolbarToggle}"/>
				<ToggleButton Content="検索" Style="{StaticResource ToolbarToggle}"/>
			</WrapPanel>
		</Grid>

		<!-- ===== Messages ===== -->
		<Grid Grid.Row="1" Margin="8,2,8,6">
			<ScrollViewer x:Name="ChatScrollViewer"
						  VerticalScrollBarVisibility="Auto"
						  HorizontalScrollBarVisibility="Disabled"
						  ScrollChanged="ChatScrollViewer_ScrollChanged">
				<ItemsControl x:Name="ChatList" ItemTemplateSelector="{StaticResource ChatTmpl}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
				</ItemsControl>
			</ScrollViewer>

			<!-- 一番下へ -->
			<Button x:Name="ScrollDownButton"
					Click="ScrollDownButton_Click"
					HorizontalAlignment="Right" VerticalAlignment="Bottom"
					Margin="0,0,6,6"
					Width="32" Height="32" Visibility="Collapsed"
					ToolTip="一番下へスクロール"
					Style="{StaticResource CircleButton}">
				<TextBlock Text="▼" FontSize="14" FontWeight="Bold" />
			</Button>
		</Grid>

		<!-- ===== Input（コンパクト） ===== -->
		<Border Grid.Row="2" Margin="8,0,8,8"
				Background="{StaticResource Chat.Input.Bg}"
				BorderBrush="{StaticResource Chat.Input.Border}" BorderThickness="1"
				CornerRadius="12" MouseDown="InputFocus" Cursor="IBeam"
				MaxHeight="360" MaxWidth="960" MinWidth="280">
			<Border.Effect>
				<DropShadowEffect BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.05"/>
			</Border.Effect>

			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<!-- 入力テキスト（Shift+Enter 改行 / Enter 送信） -->
				<TextBox x:Name="InputBox"
						 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
						 PreviewKeyDown="EnterSend"
						 MinHeight="44" MinWidth="100"
						 FontSize="15" Padding="10,10,10,10"
						 Background="Transparent" BorderThickness="0" Margin="6,0,6,0"
						 TextWrapping="Wrap" AcceptsReturn="True"/>

				<!-- 左：＋（添付などに流用可） -->
				<Button x:Name="AttachButton"
						Grid.Row="1" Grid.Column="0" Margin="8,6,0,8"
						Style="{StaticResource CircleButton}">
					<TextBlock Text="+" FontSize="16" FontWeight="Bold" />
				</Button>

				<!-- 右：送信（上矢印） -->
				<Button x:Name="SendButton"
						Grid.Row="1" Grid.Column="2" Margin="0,6,8,8"
						Click="SendButton_Click"
						Style="{StaticResource CircleButton.Primary}">
					<TextBlock Text="↑" FontSize="16" FontWeight="Bold"/>
				</Button>

				<!-- 右下のヒント（控えめに） -->
				<TextBlock Grid.Row="1" Grid.Column="1" Text="Enterで送信・Shift+Enterで改行"
						   VerticalAlignment="Center" HorizontalAlignment="Right"
						   Margin="0,0,8,0" Foreground="#94A3B8" FontSize="11"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
