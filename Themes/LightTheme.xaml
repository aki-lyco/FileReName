<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- 既存テーマ色 -->
	<Color x:Key="ThemeColor">#FF197FFF</Color>
	<SolidColorBrush x:Key="ThemeBrush" Color="{StaticResource ThemeColor}"/>

	<!-- ProgressBar 既定 -->
	<Style TargetType="ProgressBar">
		<Setter Property="Minimum" Value="0"/>
		<Setter Property="Maximum" Value="100"/>
	</Style>

	<!-- 追加：ホバー用ブラシ（ライト） -->
	<SolidColorBrush x:Key="Row.HoverBg"     Color="#F3F8FF"/>
	<SolidColorBrush x:Key="Row.HoverBorder" Color="#CDE3FF"/>
	<SolidColorBrush x:Key="Tree.HoverBg"    Color="#F5F9FF"/>

	<!-- Slider 既定 -->
	<Style TargetType="Slider">
		<Setter Property="Minimum" Value="0"/>
		<Setter Property="Maximum" Value="100"/>
	</Style>

	<!-- ▼ 高解像度アイコン（Light） -->
	<!--   pack リソースとして読み込む。DecodePixelWidth は余裕を持って 80 にし、
         実表示 20px にダウンサンプル（FilesControl 側は HighQuality スケーリング） -->
	<BitmapImage x:Key="Icon.DbIndex.Add"
                 UriSource="pack://application:,,,/Assets/Icons/big_db_index_add_light.png.png"
                 DecodePixelWidth="128"
                 CacheOption="OnLoad"/>
</ResourceDictionary>
