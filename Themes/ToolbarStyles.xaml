<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- base brushes -->
    <SolidColorBrush x:Key="TB.Fill"        Color="#F7FAFF"/>
    <SolidColorBrush x:Key="TB.Fill.Hover"  Color="#EEF5FF"/>
    <SolidColorBrush x:Key="TB.Fill.Press"  Color="#DFECFF"/>
    <SolidColorBrush x:Key="TB.Border"      Color="#D5E2F2"/>
    <SolidColorBrush x:Key="TB.Text"        Color="#22303C"/>

    <!-- primary brushes -->
    <SolidColorBrush x:Key="TB.Primary.Fill"       Color="#DDEBFF"/>
    <SolidColorBrush x:Key="TB.Primary.Fill.Hover" Color="#D2E4FF"/>
    <SolidColorBrush x:Key="TB.Primary.Fill.Press" Color="#C4DBFF"/>
    <SolidColorBrush x:Key="TB.Primary.Border"     Color="#B0CDF8"/>
    <SolidColorBrush x:Key="TB.Primary.Text"       Color="#1C2A3A"/>

    <!-- pill button (base) -->
    <Style x:Key="ToolbarButton" TargetType="Button">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TB.Text}"/>
        <Setter Property="Height" Value="34"/>
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="Padding" Value="14,6"/>
        <Setter Property="Margin" Value="6,0,0,0"/>
        <Setter Property="Background" Value="{StaticResource TB.Fill}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TB.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Fill.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Fill.Press}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- pill button (primary) -->
    <Style x:Key="ToolbarButton.Primary" BasedOn="{StaticResource ToolbarButton}" TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TB.Primary.Text}"/>
        <Setter Property="Background" Value="{StaticResource TB.Primary.Fill}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TB.Primary.Border}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Primary.Fill.Hover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource TB.Primary.Fill.Press}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- compact icon button -->
    <Style x:Key="ToolbarIconButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="Padding" Value="10,6"/>
    </Style>

</ResourceDictionary>
