<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ===== MainWindow の見た目に合わせたパレット ===== -->
	<SolidColorBrush x:Key="Pill.Bg"            Color="White"/>
	<SolidColorBrush x:Key="Pill.Border"        Color="#D7DCE6"/>
	<SolidColorBrush x:Key="Pill.Border.Hover"  Color="#7AA7FF"/>
	<SolidColorBrush x:Key="Pill.Border.Active" Color="#377DFF"/>
	<SolidColorBrush x:Key="Pill.Bg.Pressed"    Color="#EEF4FF"/>
	<SolidColorBrush x:Key="Pill.Bg.Checked"    Color="#EAF2FF"/>
	<SolidColorBrush x:Key="Pill.Text"          Color="#1C2A3A"/>

	<!-- ===== 共通テンプレート（角丸ピル） ===== -->
	<Style x:Key="__PillBase" TargetType="Button">
		<Setter Property="Background" Value="{StaticResource Pill.Bg}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Pill.Border}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="Padding" Value="12,6"/>
		<Setter Property="MinHeight" Value="32"/>
		<Setter Property="MinWidth" Value="96"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Foreground" Value="{StaticResource Pill.Text}"/>
		<Setter Property="SnapsToDevicePixels" Value="True"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12" Padding="{TemplateBinding Padding}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Pill.Border.Hover}"/>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter TargetName="Bd" Property="Background" Value="{StaticResource Pill.Bg.Pressed}"/>
							<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Pill.Border.Active}"/>
						</Trigger>
						<Trigger Property="IsKeyboardFocused" Value="True">
							<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Pill.Border.Hover}"/>
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- デフォルト（白ピル） -->
	<Style x:Key="ToolbarButton" TargetType="Button" BasedOn="{StaticResource __PillBase}"/>

	<!-- 強調版：Main の「選択状態」に近い淡青ピル（必要箇所で使用） -->
	<Style x:Key="ToolbarButton.Primary" TargetType="Button" BasedOn="{StaticResource __PillBase}">
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Background" Value="{StaticResource Pill.Bg.Checked}"/>
		<Setter Property="BorderBrush" Value="{StaticResource Pill.Border.Active}"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12" Padding="{TemplateBinding Padding}">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Pill.Border.Hover}"/>
						</Trigger>
						<Trigger Property="IsPressed" Value="True">
							<Setter TargetName="Bd" Property="Background" Value="{StaticResource Pill.Bg.Pressed}"/>
							<Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Pill.Border.Active}"/>
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="Bd" Property="Opacity" Value="0.6"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- アイコン用（幅だけ絞る。高さ・角丸・挙動は同じ） -->
	<Style x:Key="ToolbarIconButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
		<Setter Property="MinWidth" Value="44"/>
	</Style>

</ResourceDictionary>
