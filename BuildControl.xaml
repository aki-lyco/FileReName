<UserControl x:Class="Explore.BuildControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Explore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="218" MinWidth="20"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="20"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="1,1,1,1" BorderBrush="#FF828790">
                
            </Border>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
            <Border Grid.Column="2" BorderThickness="1,1,1,1" BorderBrush="#FF828790">
                <local:VersionManager />
            </Border>
        </Grid>
    </Grid>
</UserControl>
